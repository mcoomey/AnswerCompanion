<div id="ujsform">
	<%= form_for [@videoable, @video], remote: true do |f| %>
  
    <%= f.label "New Video:", :class => "attention" %>
		<%= f.file_field :videofile, :id => "video_filename" %>
    
    <%= f.hidden_field :instructor_id, :value => @user.id %>
    <%= f.hidden_field :textbook_id, :value => @textbook.id %>
    <%= f.hidden_field :course_asset_id, value: params[:course_asset_id] if params[:course_asset_id] %>
    <%= f.hidden_field :course_id, value: params[:course_id] if params[:course_id] %>
    <%= f.hidden_field :subject_id, value: params[:subject_id] if params[:subject_id] %>

		<%= f.submit "Cancel" %>
    
	<% end %>
</div>

<script id="template-upload" type="text/x-tmpl">
	<div class="upload">
	  <div id="uploadfilename">
			{%=o.name%}
    </div>
    <div class="progress"><div class="bar" style="width: 0%"></div></div>
	</div>
</script>
