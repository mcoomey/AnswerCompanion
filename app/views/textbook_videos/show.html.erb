<article>

	<div id="buttonarea">
    <%= render 'shared/common_buttons' %>
    <%= render 'local_buttons' %>
	</div>
  
	<div id="horizontal-tabs">
		<ul class="dynamic-tabs-nav">
  			<%= content_tag(:li, (link_to "Lessons", textbook_lessons_path(@textbook, {:course_asset_id => @course_asset.id}.merge(@query_string) )), 
                        class: ("activeTab" if @resource == "lessons")) %>
  			<%= content_tag(:li, (link_to "Exercises", textbook_exercises_path(@textbook, {:course_asset_id => @course_asset.id}.merge(@query_string) )),
                        class: ("activeTab" if @resource == "exercises")) %>
		</ul>
	</div>
  
  <%= render 'shared/vertical_tabs' %>  
       
	<div id="noscroll-panel">
    <%= render 'tbvideo_breadcrumbs' %>
    <%= render "show_tbvideo", :local_video => @video %>
	</div>
  
	<br class="clearfloat"/>

	<div id="create_new_section_title_dialog"
	</div>
</article>
