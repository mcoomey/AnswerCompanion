$("#buttonarea").show();
$("#messages .ujs_alert").hide();
$("#messages .alert").show();
$("#messages .notice").show().html("<%= @action %> textbox action canceled.");


if ($.cookie('horizontal_tabs_index') == ".current-tab") {
  $(".current-tab ul li:first").remove();
}
else if ($.cookie('horizontal_tabs_index') == ".archived-tab") {
  $(".archived-tab ul li:first").remove();
}
else {
  $(".future-tab ul li:first").remove();
}
