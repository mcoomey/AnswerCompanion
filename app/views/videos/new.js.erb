$('#add_video').hide();
$('#buttonarea').append("<%= j render 'new_video' %>");
$('#messages .notice').html("");
$('#messages .ujs_notice').html("");
$('#messages .alert').html("");
$('#messages .ujs_alert').html("");

$('#new_video').fileupload({
    dataType: "script",
    add: function(e, data) {
      var file, types;
      types = /(\.|\/)(wmv|mp4|webm|ogv|mov|flv)$/i;
      file = data.files[0];
      if (types.test(file.type) || types.test(file.name)) {
        data.context = $(tmpl("template-upload", file).trim());
        $('#new_video').append(data.context);
        return data.submit();
      } else {
				$('#messages .ujs_alert').html("Error: Unrecognized video format.");
        return;
      }
    },
    progress: function(e, data) {
      var progress;
      if (data.context) {
        progress = parseInt(data.loaded / data.total * 100, 10);
        return data.context.find('.bar').css('width', progress + '%');
      }
    },
    start: function(e) {
	    return $('#buttonarea form input[type=file]').remove();
		},
    fail: function(e, data) {
	    return alert("The upload has failed.  Please check your file and try again.");
		},
	  done: function(e, data) {
      $('.upload').hide();
			$('#new_video').remove();
			$('#messages .ujs_notice').html("Video upload has been submitted for processing.");
			$('#add_video').show();
    }

  });