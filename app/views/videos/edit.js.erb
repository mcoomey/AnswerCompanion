if ($.cookie('horizontal_tabs_index') == ".current-tab") {
	$("#buttonarea").hide().after("<%= j render 'edit_video', :archived_val => 0 %>");
	}
else if ($.cookie('horizontal_tabs_index') == ".archived-tab") {
	$("#buttonarea").hide().after("<%= j render 'edit_video', :archived_val => 1 %>");
	}
else {
	$("#buttonarea").hide().after("<%= j render 'edit_video', :archived_val => 2 %>");
	}
  