<article>
	<div id="buttonarea">
		<%= form_for :course, :url => course_asset_textbook_delegations_path(@course_asset), :html => { :method => 'get' } do |f| %>
			<%= f.select(:id, @courses.collect{|x| [x.name + (x.section ? "-"+x.section : "") , x.id]}, {}, {:onChange => 'this.form.submit();' } ) %>
		<% end %>
		
		<%=link_to image_tag("BackToCourses.png",  :mouseover => "BackToCoursesHover.png",:class => "button", :alt => "Back to Courses"), 
		           instructor_courses_path(@instructor) %>
							 
		<%=link_to image_tag("AddLesson.png",  :mouseover => "AddLessonHover.png",:class => "button", :alt => "Add a Lesson"), 
		           new_textbook_lesson_path(@textbook), :remote => true %>
							 
		<%=link_to image_tag("AddExercise.png",  :mouseover => "AddExerciseHover.png",:class => "button", :alt => "Add an Exercise"), 
		           new_textbook_exercise_path(@textbook), :remote => true %>


 		<div id="filterpane">
 			<div id="filters">
 				<%= form_for :filters, :url => { :action => 'index' }, :html => { :method => 'get' } do |f| %>
	 				<%= f.label :page, "Page Filter:" %>
	 				<%= f.text_field :pagefilter, :size => 10, :value => @filterstring %>
	 				<%= f.submit "Apply", :class => "button"%>
	 				<%= f.submit "Reset", :commit => "Reset", :class => "button" %>
	 			<% end %>
 			</div>
 		</div>


	</div>
	<div id="horizontal-tabs">
		<ul class="static-tabs-nav">
			<li><a href=".lesson-asset">Lessons</a></li>
			<li><a href=".exercise-asset">Exercises</a></li>
		</ul>
	</div>
	<div id="vertical-tabs">
		<ul class="dynamic-tabs-nav">
  		<span class="title">Course Assets</span>
			<% @course_assets.each do |asset| %>
				<%= render "shared/course_asset_tag", :local_asset => asset %>
				<% if @course_asset == asset %>
					<%= image_tag(@textbook.thumbnail, class: "thumbnail") %>
				<% end %>
  		<% end %>
		</ul>
		<div id="panel">
			<div class="lesson-asset">
				<%= render 'lessons/lesson_index', :lessons => @lessons %>
  			<br class="clearfloat"/>
			</div>
			<div class="exercise-asset">
				textbooks/show.exercise-asset
				<br class="clearfloat"/>				
			</div>
		</div>
		<br class="clearfloat"/>
	</div>
	<div id="textbook_choices_dialog"
	</div>
</article>
