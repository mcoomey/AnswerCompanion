$("#ujsform").remove();
$("#buttonarea").show();
$("#messages .ujs_alert").hide();
$("#messages .alert").show();
$("table tr td:nth-child(3) a").fadeTo("fast", 1).unbind('click');
$("table tr td:nth-child(4) a").fadeTo("fast", 1).unbind('click');

<% if (@action == "Create") %>
  $("#messages .ujs_notice").show().html("Add new document canceled.");
<% else %>
  $("#messages .ujs_notice").show().html("Edit document canceled.");
<% end %>
