<article>
	<div id="buttonarea">
    <%= render 'shared/common_buttons' %>
    <%= render 'local_buttons' %>
	</div>
  
	<div id="horizontal-tabs">
		<ul class="static-tabs-nav">
			<li><a href=".current-tab">Current</a></li>
			<li><a href=".archived-tab">Archived</a></li>
			<li><a href=".future-tab">Future</a></li>
		</ul>
	</div>
  
  <%= render 'shared/vertical_tabs' %>

	<div id="noscroll-panel">
    <div id="documenttables">
  		<div class="current-tab">
        <div id="current-documenttable"  class="tableContainer">
    			<%= render 'document_table', local_docs: @documents_current, local_course_asset: @course_asset %>
        </div>
  			<br class="clearfloat"/>				
  		</div>
    
  		<div class="archived-tab">
        <div id="archived-documenttable"  class="tableContainer">
    			<%= render 'document_table', local_docs: @documents_archived, local_course_asset: @course_asset %>
        </div>
  			<br class="clearfloat"/>
  		</div>
    
  		<div class="future-tab">
        <div id="future-documenttable"  class="tableContainer">
    			<%= render 'document_table', local_docs: @documents_future, local_course_asset: @course_asset %>
        </div>
  			<br class="clearfloat"/>
  		</div>
    	<br class="clearfloat"/>
    </div>
	</div>
  
</article>
