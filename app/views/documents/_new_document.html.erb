<div id="ujsform">
	<%= form_for [@course_asset, @document], remote: true do |f| %>
  
  <%= f.label :description %>
  <%= f.text_field :description, size: 40 %>
  
  <%= f.hidden_field :course_id, value: params[:document][:course_id] if params[:document]&&params[:document][:course_id] %>
  <%= f.hidden_field :subject_id, value: params[:document][:subject_id] if params[:document]&&params[:document][:subject_id] %>
  <%= f.hidden_field :course_id, value: params[:course_id] if params[:course_id] %>
  <%= f.hidden_field :subject_id, value: params[:subject_id] if params[:subject_id] %>
  
	<%= f.file_field :docfile, :id => "document_filename" %>
    
		<%= f.submit "Cancel", :name => "commit" %>
	<% end %>
</div>


<script id="template-upload" type="text/x-tmpl">
	<div class="upload">
	  <div id="uploadfilename">
			{%=o.name%}
    </div>
    <div class="progress"><div class="bar" style="width: 0%"></div></div>
	</div>
</script>
