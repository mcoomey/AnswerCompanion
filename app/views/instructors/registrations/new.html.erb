<article>
	<div id="buttonarea">
		<span class="title">Instructor Sign up</span>
		<%= link_to "Sign in", new_session_path(resource_name) %>
		<%= link_to "Forgot password", new_password_path(resource_name) %>
		<%= link_to "Re-send confirmation instructions?", new_confirmation_path(resource_name) %>
		<%= link_to "Re-send unlock instructions?", new_unlock_path(resource_name) %>
	</div>
	<div id="horizontal-tabs">
		<ul class="static-tabs-nav">
		</ul>
	</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div>
	<%= f.label :your_email %>
 	<%= f.email_field :email %></br>

    <%= f.label :new_password %>
    <%= f.password_field :password %>
 
    <%= f.label :"re-enter_password" %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div>
	<%= f.label :first_name %>
 	<%= f.text_field :firstname %>

	<%= f.label :last_name %>
 	<%= f.text_field :lastname %>

	<%= f.label :screen_name %>
 	<%= f.text_field :screenname %>
  </div>

  <div>
	<fieldset>
		<legend>School</legend>
	<%= f.fields_for :school do |s| %>
	  <%= s.label :name %>
      <%= s.text_field :name, data: {autocomplete_source: schools_path} %>

      <%= s.label :town %>
      <%= s.text_field :town  %>

      <%= s.label :state %>
      <%= s.text_field :state  %>
	<% end %>
	</fieldset>
  </div>


  <%= f.hidden_field :role, :value => "1" %>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "links" %>
</article>