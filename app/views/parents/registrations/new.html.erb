<article>
  <div id="videoblock", class="invisible">
    <%= render 'shared/videoblock' %>
  </div>	
	<div id="login-register", class="visible">
		<div id="data-entry">
		  <%= render 'shared/resource_heading', :formtype => "registration" %>
			<div id="data-entry-form">
					<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:autocomplete => "off"}) do |f| %>
						  <div class="left-entry-panel">
							 	<%= f.email_field :email, class: "wide", placeholder: "Email address", tabindex: 1 %>
							  <%= f.password_field :password, class: "wide", placeholder: "Password", tabindex: 3 %>
							 	<%= f.text_field :firstname, class: "wide", placeholder: "First name", tabindex: 5 %>
						  </div>
						  <div class="right-entry-panel">
							  <%= f.password_field :password_confirmation, class: "gap-wide", placeholder: "Re-enter Password", tabindex: 4 %>
							 	<%= f.text_field :lastname, class: "wide", placeholder: "Last name", tabindex: 6 %>
							</div>
						<%= image_submit_tag "Register.png", :onmouseover => "this.src='/assets/RegisterHover.png'",
						                                     :onmouseout => "this.src='/assets/Register.png'", class: "signin" %>

					<% end %>
				<%= image_tag "Cancel.png",  :mouseover => "CancelHover.png", :alt => "Cancel" , class: "cancel-login"  %>
			</div>
		</div>
	</div>
	<div id="menu", class="invisible">
	  <%= render 'shared/loginmenu' %>
	</div>
</article>