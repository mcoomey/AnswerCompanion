<% if @lesson.errors.any? %>
	$("#messages .alert").hide();
	$("#messages .ujs_alert").html("ERROR! <%= j @lesson.errors.full_messages.first %>" ).show();
<% else %>	
	$("#messages .ujs_alert").hide();
	$("#messages .alert").show();
	$("#messages .notice").show();
	
	<% if params[:commit]  != "Cancel" %>
		$("#messages .notice").html("Lesson updated successfully. ").show();
	<% end %>
	
	// remove the edit lesson form
	$("#ujsform").remove();


	$("#mainpane").replaceWith("<%= j render 'lesson_index', :lessons => @lessons, :subjectId => @subjectId %>");
	
	// redisplay the button area
	$("#buttonarea").show()

<% end %>