<article>
	<div id="buttonarea">
		<span class="title">Subject Index</span>
		
			<%=link_to image_tag("AddSubject.png",  :mouseover => "AddSubjectHover.png",:class => "button", :alt => "Add Subject"),  
			                      new_student_subject_path(current_student.id), id: "new_subject", remote:true %>
	</div>
	<div id="horizontal-tabs">
		<ul class="static-tabs-nav">
			<li><a href=".current-tab">Current Subjects</a></li>
			<li><a href=".archived-tab">Archived Subjects</a></li>
		</ul>
		<div class="current-tab">
			<%= render 'subjects_index_table', :local_subjects => @current_subjects %>
		</div>
		<div class="archived-tab">
			<%= render 'subjects_index_table', :local_subjects => @archived_subjects %>
		</div>
	</div>	
</article>

