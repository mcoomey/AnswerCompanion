<div id="ujsform">
<%= form_for @subject, remote:true do |f| %>
	<%= f.label :subject %>
	<%= f.text_field :name, :size => "15" %>

	<%= f.label :term %>
	<%= f.text_field :term, :size => "15" %>

	<%= f.label :category %>
	<%= f.text_field :category_name, :size => "15", data: {autocomplete_source: categories_path } %>
	    
	<%= f.label :subcategory %>
	<%= f.text_field :subcategory_name, :size => "15", data: {autocomplete_source: category_subcategories_path(0)+"?category_name=#{@categoryname}"}  %>

	<%= f.hidden_field :archived, :value => archived_val %>

	<%= f.submit "Create", :name => "commit" %>
	<%= f.submit "Cancel", :name => "commit" %>
<% end %>
</div>