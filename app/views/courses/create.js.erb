<% if @course.errors.any? %>
	$("#messages .alert").hide();
	$("#messages .ujs_alert").show().html("ERROR! <%= j @course.errors.full_messages.first %>" ).show();
<% else %>
	$("#messages .ujs_alert").hide();
	$("#messages .alert").show();
	$("#messages .notice").show().html("Successfully created course.");
	
	$("#ujsform").remove();
	$("#buttonarea").show();
	
	if ($.cookie('horizontal_tabs_index') == ".current-tab") {    
		$(".current-tab table tr:last").after("<%= j render 'course_table_row', :local_course => @course %>");
		}
	else if ($.cookie('horizontal_tabs_index') == ".archived-tab") {
		$(".archived-tab table tr:last").after("<%= j render 'course_table_row', :local_course => @course %>");
		}
  else {
		$(".future-tab table tr:last").after("<%= j render 'course_table_row', :local_course => @course %>");     
    }
<% end %>