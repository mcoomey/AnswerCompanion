<% if @course.errors.any? %>
	$("#messages .alert").hide();
	$("#messages .ujs_alert").show().html("ERROR! <%= j @course.errors.full_messages.first %>" ).show();
<% else %>
	$("#messages .ujs_alert").hide();
	$("#messages .alert").show();
	$("#messages .notice").show().html("Successfully created course.");
	
	$("#ujsform").remove();
	$("#buttonarea").show();
	
	if ($.cookie('horizontal-tabs-index') == "#current-courses") {
		$("#current-courses table tr:last").after("<%= j render 'course_table_row', :local_course => @course %>");
		}
	else {
		$("#archived-courses table tr:last").after("<%= j render 'course_table_row', :local_course => @course %>");
		}
	$("#edit_course_<%= @course.id %>").submitOnCheck();
<% end %>