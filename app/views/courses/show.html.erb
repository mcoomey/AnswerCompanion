<article>
	<div id="buttonarea">
		<%= form_for :course, :url => { :action => 'show' }, :html => { :method => 'get' } do |f| %>
			<%= f.select(:id, @courses.collect{|x| [x.name + (x.section ? "-"+x.section : "") , x.id]}, {}, {:onChange => 'this.form.submit();' } ) %>
		<% end %>
		
		<%=link_to image_tag("BackToCourses.png",  :mouseover => "BackToCoursesHover.png",:class => "button", :alt => "Back to Courses"), 
		           instructor_courses_path(@instructor) %>
		<%=link_to image_tag("Edit.png",  :mouseover => "EditHover.png",:class => "button", :alt => "Edit Subject"), 
		           edit_course_path(@course) %>
	</div>
	<div id="horizontal-tabs">
		<ul class="static-tabs-nav">
			<li><a href=".current-asset">Current</a></li>
			<li><a href=".archived-asset">Archived</a></li>
			<li><a href=".future-asset">Future</a></li>
		</ul>
	</div>
	<div id="vertical-tabs">
		<ul class="static-tabs-nav">
			<% @course_assets.each do |asset| %>
				<li><%= link_to asset.name, send("course_asset_#{asset.model}_path", asset) %></li>
			<% end %>
		</ul>
		<div id="panel">
			<div class="archived-asset">
				Archived Textbooks
			</div>
			<div class="current-asset">
				Current Textbooks
			</div>
			<div class="future-asset">
				Future Textbooks
			</div>			
		</div>
		<br class="clearfloat"/>
	</div>	
</article>
