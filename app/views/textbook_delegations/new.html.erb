<article>
	<div id="buttonarea">
		<span class="title">Choose Textbook</span>
		<div id = "button01">
			<%=link_to image_tag("Cancel.png",  :mouseover => "CancelHover.png",:class => "button", :alt => "Cancel" ), "#"%>
		</div>
		<div id = "button02">
			<% if current_instructor %>
				<%=link_to image_tag("New.png",  :mouseover => "NewHover.png",:class => "button", :alt => "New" ), new_textbook_path() %>
			<% end %>
		</div>
	</div>
	<div id="indexarea">
	<table>
	  <tr>
		<th>
		<%= form_for :category, :url => { :action => 'new' }, :html => { :method => 'get' } do |f| %>
		<%= f.label(:cat) %>
		<%= f.select :id, options_from_collection_for_select(@categories, :id, :name, :selected => @selectedCat), {}, 
		   {:onChange => 'this.form.submit();' }%>
		<% end %>				
		</th>
	    <th>
		<%= form_for :subcategory, :url => { :action => 'new' }, :html => { :method => 'get' } do |f| %>
		<%= f.label(:subcat) %>
		<%= f.hidden_field :category, :value => @selectedCat %>
		<%= f.select :id, options_from_collection_for_select(@subcategories, :id, :name, :selected => @selectedSubcat), {}, 
		   {:onChange => 'this.form.submit();', :disabled => @disableSubcat }%>
		<% end %>				
		</th>
		<th>
		<%= form_for :search, :url => { :action => 'new'}, :html => { :method => 'get'} do |f| %>
		<%= f.text_field :searchitem, :value => @searchItem %>
		<%= f.hidden_field :category, :value => @selectedCat %>
		<%= f.hidden_field :subcategory, :value => @selectedSubcat %>
		<%= f.submit "search", :name => nil %>
		<% end %>
		</th>
		</tr>
		</table>
		<%= will_paginate @textbooks %>
		<div id="frontcovers">
		<% @textbooks.each do |tb| %>
			<%= link_to image_tag( tb.frontcover_url(:thumb).to_s, :alt => "Show Textbook" ), {:action => 'create', :id => tb.id },  :method => :post  %>
		<% end %>
		</div>
		<br class="clearfloat"/>
	</div>
</article>
