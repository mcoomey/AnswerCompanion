<div class="wide-panel school-memberships">  
	<%= f.text_field :name, data: {autocomplete_source: schools_path}, class: "wide", placeholder: "School name" %>
	<%= f.text_field :town, class: "medium", placeholder: "Town or City" %>
  <%= f.text_field :state_abbrev, class: "narrow", placeholder: "State" %>
  <%= link_to image_tag("xDelete.png",  :mouseover => "xDeleteHover.png", :alt => "Delete School" , id: "remove_#{f.object.id}", class: "erase_fields"), '#'  %>
</div>	