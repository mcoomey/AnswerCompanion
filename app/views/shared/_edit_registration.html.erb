<article> 
	<div id="login-register", class="visible">
		<div id="data-entry">
		  <%= render 'shared/resource_heading', :formtype => "profile edit" %>  
		  <div id="data-entry-form">
				<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
				  <div class="left-entry-panel">
					 	<%= f.email_field :email, class: "wide", placeholder: "Email address", tabindex: 1 %>
					  <%= f.password_field :password, class: "wide", placeholder: "Password", tabindex: 3 %>
					 	<%= f.text_field :firstname, class: "wide", placeholder: "First name", tabindex: 5 %>
				  </div>
				  <div class="right-entry-panel">
					 	<%= f.text_field :screenname, class: "wide", placeholder: "Screen nickname", tabindex: 2 %>
					  <%= f.password_field :password_confirmation, class: "wide", placeholder: "Re-enter Password", tabindex: 4 %>
					 	<%= f.text_field :lastname, class: "wide", placeholder: "Last name", tabindex: 6 %>
					</div>
					<div class="full-width-panel">
						School Membership:
					</div>
					<%= f.fields_for :schools do |s| %>
					  <div class="left-entry-panel">
					    <%= s.text_field :name, data: {autocomplete_source: schools_path}, class: "wide", placeholder: "School name", tabindex: 7 %>
						</div>
					  <div class="right-entry-panel">
							<%= s.text_field :town, class: "medium", placeholder: "Town or City", tabindex: 8 %>
							<%= s.text_field :state, class: "narrow", placeholder: "State", tabindex: 9 %>
						</div>
				  <% end %>	
					<%= image_submit_tag "Submit.png", :onmouseover => "this.src='/assets/SubmitHover.png'",
				                                     :onmouseout => "this.src='/assets/Submit.png'", class: "signin" %>	
				<% end %>
				</br>
				<%= link_to "Delete my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete, class: "delete-link" %>
				<%= link_to image_tag("Cancel.png",  :mouseover => "CancelHover.png", :alt => "Cancel" , class: "cancel-link"), root_path  %>
			</div>
		</div>
	</div>
</article>
